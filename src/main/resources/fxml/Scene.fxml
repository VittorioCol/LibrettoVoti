<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.librettovoti.FXMLController">
   <center>
      <VBox prefHeight="200.0" prefWidth="352.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="58.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Nome Esame" />
                  <Separator prefHeight="0.0" prefWidth="42.0" />
                  <Label text="Voto" />
                  <Separator prefHeight="3.0" prefWidth="49.0" />
                  <Label text="Data" />
                  <Button fx:id="cerca" mnemonicParsing="false" onAction="#doCerca" text="Cerca">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="nome_esame" prefHeight="23.0" prefWidth="113.0" />
                  <TextField fx:id="voto" prefHeight="25.0" prefWidth="70.0" />
                  <TextField fx:id="data" prefHeight="12.0" prefWidth="82.0" />
                  <Button fx:id="inserisci" mnemonicParsing="false" onAction="#doInserisci" text="Inserisci">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="Areab" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </center>
</BorderPane>
